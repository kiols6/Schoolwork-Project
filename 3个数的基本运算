int a,b,c,h=0,j=0,max=0,min=0;
	double	 p=1;
	 printf("请输入三个整数并以逗号隔开：");
	 scanf_s("%d,%d,%d",&a,&b,&c);
	h=a+b+c;
	printf("和为%d\n",h);
		 p=(float)h/3;
		 printf("平均值为%.2f\n",p);
		j=a*b*c;
		printf("积为%d\n",j);
		if(a>=b && a>=c)max=a;
		if(b>=a && b>=c)max=b;
		if(c>=b && c>=a)max=c;
		if(a<=b && a<=c)min=a;
		if(b<=a && b<=c)min=b;
		if(c<=b && c<=a)min=c;
		printf("最大值为%d\n",max);
		printf("最小值为%d\n",min);
		_getch();
	    return 0;
